# =============================================================================
# Production Environment - Example Variables
# Copy to terraform.tfvars and update with your values
# =============================================================================

# Project settings
project_name = "aws-infra-visualizer"
environment  = "prod"
aws_region   = "us-east-2"

# Network settings (3 AZs for production HA)
vpc_cidr           = "10.1.0.0/16"
availability_zones = ["us-east-2a", "us-east-2b", "us-east-2c"]

# Container settings
container_port    = 8000
health_check_path = "/api/health"

# Terraform state bucket to visualize
tf_state_bucket = "your-terraform-state-bucket"

# Domain settings (REQUIRED for production)
domain_name     = "infra.example.com"
route53_zone_id = "Z1234567890ABC"
certificate_arn = ""  # Leave empty to create new ACM cert

# OIDC/SSO settings (REQUIRED for production)
oidc_issuer        = "https://your-idp.okta.com"
oidc_client_id     = "0oa..."
oidc_client_secret = "..."  # Use Terraform variables or environment

# Application settings
log_level = "INFO"
debug     = false
